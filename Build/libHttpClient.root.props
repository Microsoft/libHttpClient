<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <HCRootPropsImported>true</HCRootPropsImported>

    <HCBuildRoot Condition="'$(HCBuildRoot)' == ''">$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), build.root))\</HCBuildRoot>

    <HCXesBuild Condition="'$(XES_OUTDIR)'!=''">true</HCXesBuild>
    <HCXesBuild Condition="'$(XES_OUTDIR)'==''">false</HCXesBuild>

    <HCOutRoot Condition="'$(HCXesBuild)'=='true'">$(XES_OUTDIR)</HCOutRoot>
    <HCOutRoot Condition="'$(HCXesBuild)'!='true'">$(HCBuildRoot)Binaries\$(Configuration)\$(Platform)\</HCOutRoot>
  </PropertyGroup>
</Project>
