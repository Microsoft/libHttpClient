<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="AndroidDeprecationWarn">
    <Error
      Condition="'$(HCLibPlatformType)' == 'Android' OR '$(AndroidAPILevel)' != ''"
      Text="ANNOUNCEMENT: The Visual Studio-based Android build is being removed. Please see https://github.com/microsoft/libHttpClient/issues/ISSUE_NUMBER for more details on this announcement. To use the VS build in the deprecation period, silence this error in AndroidDeprecationWarning.targets." />
  </Target>
</Project>
